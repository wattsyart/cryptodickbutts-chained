@inherits LayoutComponentBase
@inject IOptionsSnapshot<Web3Options> _options

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://cryptodickbutts.com" target="_blank">Visit CryptoDickbutts</a>
            <a href="https://etherscan.io/address/@_options.Value.OnChainContractAddress#code"
               data-toggle="tooltip" data-placement="bottom" title="Etherscan currently truncates data URIs, using it directly will produce incorrect results!"
               target="_blank">View On Etherscan</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
